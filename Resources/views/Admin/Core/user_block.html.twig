{% block user_block %}
    {% if app.user %}

        {% if is_granted('ROLE_PREVIOUS_ADMIN') and sonata_user.impersonating %}
            <li>
                <a href="{{ url(sonata_user.impersonating.route, sonata_user.impersonating.parameters| merge({'_switch_user': '_exit'})) }}">(exit)</a>
            </li>
        {% endif %}

        <li>
            <a href="{{ url('sonata_user_admin_security_logout') }}"><i class="fa fa-sign-out fa-fw"></i> {{ app.user }} - {{ 'user_block_logout'|trans({}, 'SonataUserBundle') }}</a>
        </li>
    {% endif %}
{% endblock %}
